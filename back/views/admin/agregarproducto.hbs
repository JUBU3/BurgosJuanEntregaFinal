<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar Nuevo Producto</h4>
            <form action="/admin/ABM/agregarproducto" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre_producto">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Precio" name="precio">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Descripcion" name="descripcion"></textarea>
                </div>
                <div class="mb-3 row">
                    <label>imagen: <input type="file" name="imagen" id="imagen"></label>

                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>

            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>