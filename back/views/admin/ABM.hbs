<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Bienvenid@ {{persona}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion <i class="fas fa-sign-out-alt"></i></a></p>
    </div>


    <div class="row">
        <div class="col-7">
            <h3>Administración de Productos</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/ABM/agregarproducto"><i class="fa fa-plus" aria-hidden="true"></i>Agregar</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each listadoProductos}}
                    <tr>
                        <th scope="row">{{Id}}</th>
                        <td>{{nombre_producto}}</td>
                        
                        <td>${{precio}}</td>
                        <td>{{descripcion}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end"><a class="btn btn-secondary" href="/admin/ABM/editarproducto/{{Id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a class="btn btn-secondary" href="/admin/ABM/eliminar/{{Id}}"><i class="fa fa-trash" aria-hidden="true"></i></a></td>

                    </tr>
                    {{/each}}


                </tbody>
            </table>
        </div>
    </div>




</div>